<%- include('partials/header/_topLinks.ejs') %>
<main id="user-profile">
    <div class="user-profile-header">
        <div>
            <h1><%= userListedservices.brandName %></h1>
            <p><%= userListedservices.tagline %></p>
        </div>
        <div>
            <a href="/go-back" style="text-align: center;"><i class="fas fa-home"></i> Home</a>
        </div>
    </div>

    <div class="details-page-main">
        <div class="details-col-left">
            <div class="service">
                <h2>General Service Details</h2>
                <p><span>Established: </span><%= userListedservices.establishment %></p>
                <p><span>Phone Number: </span><%= userListedservices.phone %></p>
                <p><span>Email Address: </span><%= userListedservices.email %></p>
                <p><span>Address: </span><%= userListedservices.address %></p>
                <p><span>Address (state): </span><%= userListedservices.state %></p>
            </div>

            <div class="addedBy">
                <h2>Service Owner Details</h2>
                <p><span>Owner: </span><%= userListedservices.owner %></p>
                <p><span>Profession: </span><%= userListedservices.profession %></p>
            </div>
        </div>
        <div class="details-col-right">
            <h2>All services offered</h2>
            <% userListedservices.services.forEach(service => { %>
                <div><%= service %></div>
            <% }) %>
        </div>
    </div>

    <div class="details-page-reviews">
        <div class="reviews">
            <h2>Reviews from customers</h2>
            <div>
                <% userReviews.forEach(review => { %>
                    <div class="inner">
                        <i class="fas fa-user"></i>
                        <div>
                            <p class="reviewer-name"><%= review.name %></p>
                            <p class="rate"><span>Rating: &nbsp;</span>
                                <% for(let i=0; i<review.rating; i++){ %>
                                    <i class="fas fa-star"></i>
                                <% } %> </p>
                            <p><%= review.comment %></p>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>

        <div class="write-review">
            <h2>Write a review</h2>
            <form action="/" method="POST">
                <div>
                    <i class="fas fa-user"></i>
                    <input type="text" name="name" placeholder="Enter your name" required>
                </div>
                <div>
                    <i class="fas fa-medal"></i>
                    <label for="rating">Rating: </label>&nbsp;<span style="font-weight: bold;" id="sliderValue">4</span>&nbsp;
                    <input type="range" min="0" max="5" name="rating" value="4" class="slider" required>&nbsp;
                    <script>
                        const slider = document.querySelector('.slider')
                        slider.addEventListener('change', () => document.getElementById('sliderValue').innerText = slider.value)
                    </script>
                </div>
                <div>
                    <i class="fas fa-comment"></i>
                    <input type="text" name="comment" placeholder="reviews message" required>
                </div>
                <button type="submit">Post Review</button>
            </form>
        </div>
    </div>

</main>
<footer>
    <%- include('partials/footer/actualFooter.ejs') %> 
