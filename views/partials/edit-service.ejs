                </div>
                <div>
                    <i class="fas fa-images"></i>
                    <input id="uploadGalleryImages" accept='image/*' name="galleryImg1" onchange="javascript:updateFileName(this)" type="file" data-before="<%=// services.gallery[0].filename %>" required>
                </div>
