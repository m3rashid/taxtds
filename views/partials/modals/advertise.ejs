<div id="advertiseMain" data-display="0">
    <span class="close"><i class="fas fa-times-circle"></i></span>
    <div class="loginCard">
        <img src="images/fav.ico" alt="">

        <form action="/admin/advertise" method="POST">
            <div class="loginUsername">
                <i class="fas fa-user"></i>
                <input type="text" name="name" placeholder="Enter organisation name" required>
            </div>
            <div class="loginUsername">
                <i class="fas fa-at"></i>
                <input type="email" name="email" placeholder="Enter email" required>
            </div>
            <div class="loginUsername">
                <i class="fas fa-phone-alt"></i>
                <input type="tel" name="phone" placeholder="Enter your phone number" required>
            </div>
            <textarea name="query" placeholder="Enter your query to be asked" required></textarea>

            <button type="submit">Get Quotes</button>
        </form>

    </div>
</div>
