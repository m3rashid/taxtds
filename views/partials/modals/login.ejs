<div id="loginMain" data-display="0">
    <span class="close"><i class="fas fa-times-circle"></i></span>
    <div class="loginCard">
        <img src="images/fav.ico" alt="">
        <form action="/login" method="POST">
            <div class="loginUsername">
                <i class="fas fa-at"></i>
                <input type="email" name="username" placeholder="user email" required>
            </div>
            <div class="loginPassword">
                <i class="fas fa-key"></i>
                <input type="password" name="password" placeholder="User password" required>
            </div>
            <button type="submit">User Login</button>
        </form>
        <a class="forgot-password" href="/forgot-password">Forgot Password</a>
        <style>
            a.forgot-password { color: white; }
            a.forgot-password:hover { color: cyan; }
        </style>
    </div>
</div>
