<%- include('partials/header/_topLinks.ejs') %>
    <main id="user-profile">
        <div class="user-profile-header">
            <div>
                <h1 >Hello <%= username %></h1>
                <p>Manage your services here</p>
            </div>
            <div>
                <a id="settingsBtn" onclick="">
                    <i class="fas fa-cog"></i>
                    &nbsp;Settings
                </a>
                <a id="logoutBtn" onclick="logoutUser()">
                    <i class="fas fa-sign-out-alt"></i>
                    &nbsp;Logout
                </a>
                <script>
                    function logoutUser(){
                        if(confirm('Are you sure you want to logout? ')) window.location.href = '/logout';
                    };
                </script>
            </div>
        </div>

        <div class="user-profile-main-page">
            <div class="user-profile-form">
                <h2>Register a new service</h2>
                <form id="add-service" action="/user/add-service" method="POST" class="user-profile-register-service">
                    <div>
                        <i class="fas fa-star-half-alt"></i>
                        <input type="text" name="brandName" placeholder="Name of your brand" required>
                    </div>
                    <div>
                        <i class="fas fa-user-tie"></i>
                        <input type="text" name="owner" placeholder="Name of the owner" required>
                    </div>
                    <div>
                        <i class="fas fa-street-view"></i>
                        <input type="text" name="address" placeholder="Full address of the service">
                    </div>
                    <div>
                        <i class="fab fa-font-awesome-flag"></i>
                        <input type="text" name="state" placeholder="Adress (state)" required>
                    </div>
                    <div>
                        <i class="fas fa-briefcase"></i>
                        <input type="text" name="service" placeholder="Name of the service" required>
                    </div>
                    <div>
                        <i class="fas fa-phone-alt"></i>
                        <input type="tel" name="phone" placeholder="Phone number (office/owner)" required>
                    </div>
                    <div>
                        <i class="fas fa-envelope-open-text"></i>
                        <input type="email" name="email" placeholder="Email (service/owner)">
                    </div>
                    <button type="submit">Add service</button>
                </form>
            </div>

            <div class="user-profile-cards">
                <h2>Your Already Listed Services</h2>

                <% services.forEach(ad => { %>
                    <div class="user-profile-advert">
                        <p>
                            <span>Brand: </span>
                            <%= ad.brandName %>
                        </p>
                        <p>
                            <span>Owner: </span>
                            <%= ad.owner %>
                        </p>
                        <p>
                            <span>Address: </span>
                            <%= ad.address %>
                        </p>
                        <p>
                            <span>State: </span>
                            <%= ad.state %>
                        </p>
                        <p>
                            <span>Service: </span>
                            <%= ad.service %>
                        </p>
                        <p>
                            <span>Phone: </span>
                            <%= ad.phone %>
                        </p>
                        <p>
                            <span>Email: </span>
                            <%= ad.email %>
                        </p>
                    </div>
                <% }) %>
            </div>
        </div>
    </main>
    
    <footer>
        <%- include('partials/footer/actualFooter.ejs') %> 
